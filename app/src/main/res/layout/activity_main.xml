<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/strait"
        android:padding="10dp"
        android:text="The Curent score"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="70sp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/strait"
        android:text="180"
        android:textColor="@color/colorAccent"
        android:textSize="66sp"
        android:textStyle="bold"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_height="66dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="470dp"
        android:onClick="guess"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:contentPadding="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"

    />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/boogaloo"
        android:padding="10dp"
        android:text="Press guess to guess a number between 1-20, right answer = plus 20 points and wrong answer = minus 20 points"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:text="Guess!!"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Guess the number  here!"
        android:digits="0123456789."
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textColor="@color/digital_color"
        android:textColorHint="#ecf0f1"
        android:textSize="24sp"
        />
</RelativeLayout>